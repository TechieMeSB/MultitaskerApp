<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:paddingTop="15dp"
    android:paddingLeft="10dp"
    android:background="@drawable/w1"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".LoginActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_centerHorizontal="true"
    >



        <TextView
            android:id="@+id/log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:textSize="55dp">

        </TextView>



        <ImageView
            android:id="@+id/logimg"
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:layout_below="@+id/log"
            android:paddingBottom="10dp"
            android:layout_margin="20dp"
            android:src="@drawable/ic_user"
            android:layout_centerHorizontal="true"
            android:textAlignment="center">

        </ImageView>


        <EditText
            android:id="@+id/emailL"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginLeft="12dip"
            android:layout_marginTop="8dip"
            android:layout_marginRight="10dip"
            android:drawableLeft="@drawable/ic_action_email"
            android:drawablePadding="1dp"
            android:layout_below="@+id/logimg"
            android:maxLines="1"
            android:textColorHint="#5B2C6F"
            android:fontFamily="sans-serif"
            android:hint="@string/email"
            android:textAlignment="center"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="30sp">

        </EditText>

        <EditText
            android:id="@+id/etPasswordL"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginLeft="12dip"
            android:layout_marginTop="8dip"
            android:layout_marginRight="10dip"
            android:drawableLeft="@drawable/ic_action_pass"
            android:drawablePadding="1dp"
            android:layout_below="@+id/emailL"
            android:maxLines="1"
            android:textColorHint="#5B2C6F"
            android:fontFamily="sans-serif"
            android:hint="@string/password"
            android:textAlignment="center"
            android:inputType="textPassword"
            android:singleLine="true"
            android:layout_marginBottom="20dp"
            android:textColor="@android:color/black"
            android:textSize="30sp" />
        <TextView
            android:id="@+id/textv5"
            android:layout_below="@+id/etPasswordL"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="Attempts Allowed">

        </TextView>
    <Button
        android:id="@+id/Login"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/button"
        android:text="Login"
        android:textColor="#fff"
        android:layout_below="@+id/etPasswordL"
        android:layout_alignParentStart="true"
        android:textSize="20dp">

    </Button>

    <Button
        android:id="@+id/cancelL"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/button"
        android:text="Cancel"
        android:layout_below="@+id/etPasswordL"
        android:layout_alignParentEnd="true"
        android:textColor="#fff"
        android:textSize="20dp">

    </Button>




</RelativeLayout>