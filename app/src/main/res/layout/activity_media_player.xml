<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/music"
tools:context=".PartB.MediaPlayerActivity">


<ImageView
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_cloudsound3"
    android:layout_marginTop="25dp"
    android:id="@+id/img"
    android:layout_centerHorizontal="true"></ImageView>
<TextView
    android:layout_below="@id/img"
    android:id="@+id/tv1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Now Playing"
    android:layout_marginLeft="15dp"
    android:textSize="30sp"
    android:textColor="#fff"
    android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
    />
<TextView
    android:id="@+id/tv2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="song"
    android:textSize="38sp"
    android:textColor="#bbb"
    android:layout_below="@+id/tv1"
    android:layout_marginLeft="15dp"
    android:fontFamily="cursive"
    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
    />

<ImageButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_action_back"
    android:layout_alignParentBottom="true"
    android:layout_marginLeft="55dp"
    android:background="#000"
    android:id="@+id/back"
    android:layout_marginBottom="100dp"></ImageButton>

<ImageButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_action_play"
    android:layout_alignParentBottom="true"
    android:id="@+id/play"
    android:background="#000"
    android:layout_toRightOf="@+id/back"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="100dp"></ImageButton>
<ImageButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_action_pause"
    android:id="@+id/pause"
    android:layout_alignParentBottom="true"
    android:background="#000"
    android:layout_marginLeft="10dp"
    android:layout_toRightOf="@id/play"
    android:layout_marginBottom="100dp"></ImageButton>

<ImageButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_action_forward"
    android:id="@+id/forward"
    android:layout_alignParentBottom="true"
    android:layout_marginLeft="10dp"
    android:layout_toRightOf="@id/pause"
    android:background="#000"
    android:layout_marginBottom="100dp"></ImageButton>



<SeekBar
    android:id="@+id/seekbar"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:scrollbarStyle="insideInset"
    android:layout_alignTop="@+id/startTime"
    android:layout_marginTop="-38dp"
    android:layout_marginBottom="20dp"
    android:layout_marginLeft="70dp"
    android:layout_marginRight="50dp"
    android:paddingBottom="20dp"></SeekBar>

<TextView
    android:id="@+id/songtime"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_marginStart="33dp"
    android:layout_marginTop="-100dp"
    android:layout_below="@+id/seekbar"
    android:paddingBottom="50dp"
    android:text="0 min 0 sec"
    android:layout_alignTop="@+id/back"
    android:textColor="#A3E4D7 "
    android:textStyle="bold"
    android:textSize="25sp" />

<TextView
    android:id="@+id/startTime"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignTop="@+id/forward"
    android:layout_alignParentEnd="true"
    android:layout_marginLeft="30dp"
    android:layout_marginTop="-100dp"
    android:layout_marginEnd="33dp"
    android:textStyle="bold"
    android:paddingBottom="50dp"
    android:text="0 min 0 sec"
    android:textColor="#A3E4D7 "
    android:textSize="25sp" />
</RelativeLayout>